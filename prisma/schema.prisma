generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ou "sqlite" se estiver usando local, mas na Vercel geralmente Ã© Postgres (Vercel Postgres ou Neon)
  url      = env("DATABASE_URL")
}

model Usuario {
  id            String         @id @default(uuid())
  nome          String
  cpf           String         @unique
  telefone      String
  participacoes Participante[]
  criadoEm      DateTime       @default(now())
}

model Bolao {
  id             String            @id @default(uuid())
  concurso       String
  dataSorteio    DateTime
  premioEstimado Float
  valorCota      Float
  aberto         Boolean           @default(true)
  tipoCotaUnica  Boolean           @default(false)
  participantes  Participante[]
  apostas        ApostaRealizada[]
  criadoEm       DateTime          @default(now())
  atualizadoEm   DateTime          @default(now()) @updatedAt
}

model Participante {
  id            String    @id @default(uuid())
  bolaoId       String
  bolao         Bolao     @relation(fields: [bolaoId], references: [id], onDelete: Cascade)
  usuarioId     String
  usuario       Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  nomesCotas    String[]  // Array de nomes das cotas
  quantidade    Int
  valorTotal    Float
  
  status        String    @default("pendente") // pendente, pago
  metodo        String?   @default("PIX")      // <--- O CAMPO NOVO QUE FALTAVA
  
  paymentId     String?
  dataPagamento DateTime?
  criadoEm      DateTime  @default(now())
}

model ApostaRealizada {
  id        String   @id @default(uuid())
  bolaoId   String
  bolao     Bolao    @relation(fields: [bolaoId], references: [id], onDelete: Cascade)
  numeros   Int[]
  origem    String?
  criadoEm  DateTime @default(now())
}

model CatalogoJogos {
  id        String   @id @default(uuid())
  nome      String
  numeros   Int[]
  criadoEm  DateTime @default(now())
}